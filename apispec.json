  "servers": [{ "url": "http://localhost:3000/api" }],
  "paths": { 
    "/register" : {
        "post" : {
            "tags": ["customers"],
            "security": [{
                "customerAuth": []
            }],
            "summary": "user membuat account",
            "description": "Digunakan untuk mendaftarkan pengguna baru",
            "requestBody" : {
                "required": true,
                "content": {
                    "application/json" : {
                        "schema" : {
                            "type": "object",
                            "properties": {
                                "username" : {
                                    "type": "string",
                                    "required": true,
                                    "minLength": 10
                                },
                                "email" : {
                                    "type": "string",
                                    "required": true,
                                    "minLength": 10
                                },
                                "password" : {
                                    "type": "string",
                                    "required": true,
                                    "minLength": 10
                                }
                            }
                        }
                    }
                }
            },
            "responses": {
                "201" : {
                    "description": "berhasil membuat akun",
                    "content": {
                        "application/json" : {
                            "schema" : {
                                "type": "array",
                                "items" : {
                                    "type": "object",
                                    "properties": {
                                        "username" : {
                                            "type": "string"
                                        },
                                        "email" : {
                                            "type": "string"
                                        },
                                        "password" : {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "400" : {
                    "description": "data yang dimasukan salah"
                },
                "500" : {
                    "description": "server sedang bermasalah"
                }
            }
        }
    },
    "/login" : {
        "post" : {
            "tags": ["customers"],
            "security": [{
                "customerAuth": []
            }],
            "summary": "user masuk ke akun",
            "description": "Digunakan untuk user yang telah daftar",
            "requestBody" : {
                "required": true,
                "content": {
                    "application/json" : {
                        "schema" : {
                            "type": "object",
                            "properties": {
                                "email" : {
                                    "type": "string",
                                    "required": true
                                },
                                "password" : {
                                    "type": "string",
                                    "required": true
                                }
                            }
                        }
                    }
                }
            },
            "responses": {
                "200" : {
                    "description": "berhasil masuk ke akun",
                    "content": {
                        "application/json" : {
                            "schema" : {
                                "type": "array",
                                "items" : {
                                    "type": "object",
                                    "properties": {
                                        "email" : {
                                            "type": "string"
                                        },
                                        "role" : {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "400" : {
                    "description": "username atau password salah"
                },
                "500" : {
                    "description": "server sedang bermasalah"
                }
            }
        }
    },
